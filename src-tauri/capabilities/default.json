{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the application",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "core:window:allow-maximize",
    "core:window:allow-minimize",
    "core:window:allow-hide",
    "core:window:allow-toggle-maximize",
    "core:window:allow-unmaximize",
    "dialog:allow-open",
    "dialog:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    "shell:allow-open",
    "drag:default",
    "drag:allow-start-drag",
    {
      "identifier": "fs:scope",
      "allowPaths": ["**"]
    }
  ]
}
